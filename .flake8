[flake8]
# Flake8 configuration for ClearPixAI

# Maximum line length
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    ENV,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    checkpoints,
    data

# Ignore specific rules
extend-ignore =
    E203,  # Whitespace before ':' (conflicts with Black)
    E501,  # Line too long (handled by Black)
    W503,  # Line break before binary operator (conflicts with Black)
    E402,  # Module level import not at top of file (sometimes needed)

# Maximum complexity
max-complexity = 15

# Enable specific checks
select = B,C,E,F,W,T4,B9

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F811

# Show source code for errors
show-source = true

# Show pep8 recommendation
show-pep8 = true

# Count errors
count = true

# Statistics
statistics = true

